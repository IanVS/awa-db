---
import type { TypeAs, TypeClass } from '@/types';
import type { HTMLTag, Polymorphic } from 'astro/types';

export type Props<T extends HTMLTag> = Polymorphic<TypeAs<T>> & TypeClass;

const { class: className = '', as: Element = 'p', ...props } = Astro.props;
---

<Element
  class={`border border-accent/25 bg-white p-4 rounded-lg leading-6 ${className}`}
  {...props}
>
  <slot />
</Element>
