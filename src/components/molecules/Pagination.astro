---
import Pill from "@/atoms/Pill.astro";

import type { Page } from "astro";
import type { TypeClass } from "@/types/TypeClass";

export interface Props extends TypeClass {
  page: Page;
}

const { page, class: className = "" } = Astro.props;
---

<div class={`grid grid-cols-6 gap-2 ${className}`}>
  <Pill as="a" aria-disabled={page.currentPage === 1} href="1">&lt;&lt;</Pill>

  <Pill as="a" aria-disabled={!page.url.prev} href={page.url.prev}>&lt;</Pill>

  <Pill class="col-span-2">{page.currentPage} / {page.lastPage}</Pill>

  <Pill as="a" aria-disabled={!page.url.next} href={page.url.next}>&gt;</Pill>

  <Pill
    as="a"
    aria-disabled={page.currentPage === page.lastPage}
    href={page.lastPage}
  >
    &gt;&gt;
  </Pill>
</div>
